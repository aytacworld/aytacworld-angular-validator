{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "coverage": true,
    ".vscode": true,
    "**/*.tgz": true,
    "package-lock.json": true,
    "src/**/*.css": true,
    "dist": true,
    "tmp": true,
    ".temp": true,
    "npm-debug.log*": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true
  },
  "typescript.tsdk": "./node_modules/typescript/lib",
  "editor.tabSize": 2,
  "editor.scrollBeyondLastLine": false,
  "editor.formatOnPaste": true,
  "tslint.autoFixOnSave": true
}
